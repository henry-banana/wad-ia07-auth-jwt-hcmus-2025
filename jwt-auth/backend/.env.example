# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# Local Docker Database
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=jwt_auth_db
DATABASE_PORT=5433

# Connection URL for Prisma
# Format: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/jwt_auth_db"

# For production, use cloud database (Neon, Supabase, Railway, etc.)
# DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# ==========================================
# JWT SECRETS (⚠️ GENERATE NEW IN PRODUCTION!)
# ==========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# SECURITY WARNING: These are example values for development only!
# MUST generate new secrets for production using the command above!

JWT_SECRET=your_jwt_access_token_secret_here_minimum_32_characters_recommended
JWT_REFRESH_SECRET=your_jwt_refresh_token_secret_here_minimum_32_characters_recommended

# ==========================================
# TOKEN EXPIRATION
# ==========================================
# Access Token: short-lived (15 minutes recommended)
JWT_ACCESS_EXPIRATION=15m

# Refresh Token: long-lived (7 days recommended)
JWT_REFRESH_EXPIRATION=7d

# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=3000
NODE_ENV=development

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Frontend URL for CORS (update in production)
FRONTEND_URL=http://localhost:5173
